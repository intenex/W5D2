<h1><%= @post.title %></h1>
<br/><br/>
<% if @post.url %>
  <a href="<%=@post.url%>"><%= @post.url %></a>
  <br/><br/>
<% end %>
<% if @post.content %>
  <%= @post.content %>
<% end %>

<a href="<%=new_post_comment_url(@post)%>">Make new comment</a>

<ul>
<%# @post.comments.where(parent_comment_id: nil).each do |comment| %>
<% @all_comments[nil].each do |comment| %>
  <li>
    <%= comment.content %><br>
    <%= comment.created_at %><br>
    <%= comment.id %>
    <%= render 'comment', comment: comment, all_comments: @all_comments %>
    <a href="<%=comment_url(comment)%>">See comment and replies</a>
  </li>
<% end %>
</ul>