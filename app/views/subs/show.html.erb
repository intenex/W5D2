<h1><%= @sub.title %></h1>
<h2>Moderator: <%= @sub.moderator.username %></h2>
<h2>Description: <%= @sub.description %></h2>

<ul>
<% @sub.posts.each do |post| %>
  <li>
    <%= post.title %>
    <% if post.url %>
      <a href="<%=post.url%>"><%= post.url %></a>
    <% end %>
    <% if post.content %>
      <%= post.content %>
    <% end %>
  </li>
<% end %>
</ul>